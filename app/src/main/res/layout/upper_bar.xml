<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="175dp">


    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:cardBackgroundColor="@android:color/transparent"

        app:cardElevation="0dp"
        >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#20242f" />

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="90dp"
            android:src="@drawable/upper_bar_bg" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/image_category1"
                android:layout_width="42dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginTop="10dp"
                android:adjustViewBounds="true"
                android:scaleType="fitStart"
                android:src="@drawable/baseline_question_mark_24"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"


                />

            <TextView
                android:id="@+id/text_descovery"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Descubra"

                android:textColor="@color/white"
                android:textSize="12sp"
                app:layout_constraintStart_toStartOf="@id/image_category1"
                app:layout_constraintTop_toBottomOf="@+id/image_category1"

                />

            <ImageView
                android:id="@+id/image_category2"
                android:layout_width="42dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="30dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="10dp"
                android:adjustViewBounds="true"
                android:scaleType="fitStart"
                android:src="@drawable/baseline_calendar_today_24"
                app:layout_constraintStart_toEndOf="@id/image_category1"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/text_top20month"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Novidades"
                android:textColor="@color/white"

                android:textSize="12sp"
                app:layout_constraintEnd_toEndOf="@+id/image_category2"
                app:layout_constraintStart_toStartOf="@id/image_category2"
                app:layout_constraintTop_toBottomOf="@+id/image_category2"

                />

            <ImageView
                android:id="@+id/image_category3"
                android:layout_width="42dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="30dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="10dp"
                android:adjustViewBounds="true"
                android:scaleType="fitStart"
                android:src="@drawable/baseline_stacked_line_chart_24"
                app:layout_constraintStart_toEndOf="@id/image_category2"
                app:layout_constraintTop_toTopOf="parent" />


            <TextView
                android:id="@+id/text_upping"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Crescente"
                android:textColor="@color/white"

                android:textSize="12sp"
                app:layout_constraintEnd_toEndOf="@+id/image_category3"
                app:layout_constraintStart_toStartOf="@id/image_category3"
                app:layout_constraintTop_toBottomOf="@+id/image_category3" />

            <ImageView
                android:id="@+id/image_category4"
                android:layout_width="42dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="30dp"

                android:layout_marginTop="10dp"
                android:layout_marginEnd="10dp"
                android:adjustViewBounds="true"
                android:scaleType="fitStart"
                android:src="@drawable/baseline_local_fire_department_24"
                app:layout_constraintStart_toEndOf="@id/image_category3"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/text_top10"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Top 10"
                android:textColor="@color/white"

                android:textSize="12sp"
                app:layout_constraintEnd_toEndOf="@+id/image_category4"
                app:layout_constraintStart_toStartOf="@id/image_category4"
                app:layout_constraintTop_toBottomOf="@+id/image_category4" />

            <ImageView
                android:id="@+id/image_category5"
                android:layout_width="42dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="30dp"

                android:layout_marginTop="10dp"
                android:layout_marginEnd="10dp"
                android:adjustViewBounds="true"
                android:scaleType="fitStart"
                android:src="@drawable/baseline_newspaper_24"
                app:layout_constraintStart_toEndOf="@id/image_category4"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/text_update"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Atualizações"
                android:textColor="@color/white"
                android:textSize="12sp"
                app:layout_constraintEnd_toEndOf="@+id/image_category5"
                app:layout_constraintStart_toStartOf="@id/image_category5"
                app:layout_constraintTop_toBottomOf="@+id/image_category5" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>
</androidx.constraintlayout.widget.ConstraintLayout>