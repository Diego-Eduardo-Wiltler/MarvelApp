<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#20242f"

    tools:context=".view.HomeActivity">

    <include
        android:id="@+id/search_include"
        layout="@layout/search_bar" />

    <include
        android:id="@+id/profile_include"
        layout="@layout/profile_picture" />

<include
    android:id="@+id/carousel_banner"
    layout="@layout/banner_images" />

    <include android:id="@+id/upper_bar"
        layout="@layout/upper_bar"
        />

    <include
        android:id="@+id/specifics"
        layout="@layout/specifics"
        />


    <include android:id="@+id/cards"
        layout="@layout/home_main_cards"
        />



</androidx.constraintlayout.widget.ConstraintLayout>